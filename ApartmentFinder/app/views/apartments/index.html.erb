<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<form method="get" method="/apartments">
  <input type="text" name="search" />
  <input type="submit" value="Search" />
</form>

<!--  render the results from the controller here, probably as erb -->

<br>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>Street </th>
      <th>Apt# </th>
      <th>City </th>
      <th>Postal Code </th>
      <th>State </th>
      <th>Country </th>
      <th>Contact </th>
      <th>Phone Number </th>
      <th>Contact Hours </th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= image_tag(apartment.image.url(:large)) %></td>
        <td><%= apartment.street %></td>
        <td><%= apartment.apt_num %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.postal_code %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.country %></td>
        <td><%= apartment.contact %></td>
        <td><%= apartment.phone_number %></td>
        <td><%= apartment.contact_hours %></td>
        <td><%= apartment.latitude %></td>
        <td><%= apartment.longitude %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path %>
